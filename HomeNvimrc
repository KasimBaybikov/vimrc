"default
set nu
syntax on
set nowrap
lang en_US

"extractable tabs and spaces
set listchars=eol:¬,tab:>·,trail:~,extends:>,precedes:<
set list

"tabs
set tabstop=4
set shiftwidth=4
"do not create swp files
set noswapfile
"scroll offset
set so=5
"Horizontal scroll offset
set siso=10

"fast move between windows
nmap <C-h> <C-w>h
nmap <C-j> <C-w>j
nmap <C-k> <C-w>k
nmap <C-l> <C-w>l

"bracket completion
inoremap {<CR> <space>{<CR>}<Esc>O

call plug#begin('~/.vim/plugged')
Plug 'preservim/nerdtree'
Plug 'preservim/nerdcommenter'
Plug 'neoclide/coc.nvim', {'branch': 'release'}
Plug 'kyoz/purify', { 'rtp': 'vim' }
Plug 'sonph/onehalf', { 'rtp': 'vim' }
Plug 'dracula/vim', { 'as': 'dracula' }
Plug 'fatih/vim-go', { 'do': ':GoUpdateBinaries' } "`GoInstallBinaries при первом старте
call plug#end()

"theme
colorscheme purify
"colorscheme onehalfdark
"colorscheme dracula

"Coc
"{"clangd.path": "/Users/<name>/.config/coc/extensions/coc-clangd-data/install/12.0.0/clangd_12.0.0/bin/clangd"} in /Users/<name>/.config/nvim/coc-settings.json (CocConfig)
inoremap <expr> <CR> pumvisible() ? "\<C-y>" : "\<CR>"
inoremap <expr> <Space> pumvisible() ? "\<C-y> " : "\<Space>"
inoremap <silent><expr> <Tab> pumvisible() ? "\<C-n>" : "\<Tab>"
inoremap <silent><expr> <S-Tab> pumvisible() ? "\<C-p>" : "\<Tab>"
"go definition
nmap <silent> gd <Plug>(coc-definition)
"rename
nmap <leader>rn <Plug>(coc-rename)

"nerdtree
map <C-n> :NERDTreeToggle<CR>

"nerdcommenter
vmap // <plug>NERDCommenterToggle
nmap // <plug>NERDCommenterToggle

"open terminal
noremap <F12> :bo :tabnew<CR>:terminal<CR>i
tnoremap <ESC> <C-\><C-n>
